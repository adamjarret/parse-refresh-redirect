{
  "name": "parse-refresh-redirect",
  "version": "1.0.1",
  "description": "Parse HTML and return a redirect URL if one is defined in the content attribute of a meta[http-equiv=\"refresh\"] element.",
  "main": "index.js",
  "types": "./index.d.ts",
  "bin": "./cli.js",
  "files": [
    "bin",
    "index.d.ts"
  ],
  "scripts": {
    "fix": "yarn pretty && yarn lint && yarn spell && yarn cover",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "pretty": "prettier './**/*.{js,json,md}' --write --ignore-path .gitignore",
    "spell": "cspell './**/*' --config .vscode/cSpell.json",
    "cover": "nyc yarn test",
    "test": "spoon './test/**/*.test.js'"
  },
  "keywords": [
    "html",
    "meta",
    "refresh",
    "redirect",
    "parse",
    "parse5"
  ],
  "author": "Adam Jarret <adam@atj.me> (https://atj.me)",
  "license": "MIT",
  "homepage": "https://github.com/adamjarret/parse-refresh-redirect#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamjarret/parse-refresh-redirect.git"
  },
  "dependencies": {
    "parse5": "^6.0.0"
  },
  "devDependencies": {
    "cspell": "^4.0.63",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "spooning": "^1.1.3",
    "spooning-cli": "^1.0.6"
  },
  "resolutions": {
    "lodash": "^4.17.17",
    "minimist": "^1.2.5",
    "mkdirp": "^0.5.3"
  }
}
